@model ZamowKsiazke.ViewModel.EditRoleViewModel

@{
    ViewData["Title"] = "Edytuj rolę";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Edytuj rolę</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3 row">
                            <label asp-for="Id" class="col-sm-3 col-form-label">Identyfikator</label>
                            <div class="col-sm-9">
                                <input asp-for="Id" disabled class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="RoleName" class="col-sm-3 col-form-label">Nazwa roli</label>
                            <div class="col-sm-9">
                                <input asp-for="RoleName" class="form-control" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="ListAllRoles" class="btn btn-warning"><i class="fa-solid fa-backward-step"></i> Powrót</a>
                            <button type="submit" class="btn btn-success"><i class="fa-solid fa-check"></i> Zaktualizuj</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h3 class="mb-0">Użytkownicy z rolą @Model.RoleName</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Użytkownik</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Users != null && Model.Users.Any())
                            {
                                foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@user</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>Brak użytkowników z rolą @Model.RoleName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end">
                        <a asp-action="EditUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">Dodaj/Usuń użytkowników w roli</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>